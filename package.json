    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.9.0",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
